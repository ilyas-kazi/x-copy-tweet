{
    "manifest_version": 3,
    "name": "X Copy Tweet",
    "version": "1.1",
    "description": "Adds a copy button to each tweet on x.com",
    "permissions": [
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ]
}